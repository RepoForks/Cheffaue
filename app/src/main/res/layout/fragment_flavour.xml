<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:williamchart="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context="com.rowland.cheffaue.detailfeature.view.fragments.child.FlavourFragment">

    <com.db.chart.view.HorizontalBarChartView
        android:id="@+id/bcv_flavour"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:layout_below="@+id/chart_toolbar"
        williamchart:chart_axis="false"
        williamchart:chart_barBackgroundColor="#592932"
        williamchart:chart_barSpacing="20dp"
        williamchart:chart_cornerRadius="2dp"
        williamchart:chart_fontSize="15sp"
        williamchart:chart_labelColor="#592932" />

</FrameLayout>